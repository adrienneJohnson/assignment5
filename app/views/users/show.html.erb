<p>User Id:<%= @user.id %></p>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>

<h3>Posts by <%= @user.name %></h3>
<ul>
<% @posts.each do |post| %>
  <li><%= link_to post.title, post_path(post) %></li>
<% end %>
</ul>

<p><%= link_to "Edit Account", edit_user_path(@user) %></p>

<p><%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete your account?"} %></p>